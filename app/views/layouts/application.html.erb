<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>GirlsScouts</title>
  <%= stylesheet_link_tag    "application", media: "all",
                             "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<!-- END:head -->
<body class="<%= controller.controller_name %>">
<!-- START:i18n -->
<div id="banner">

  <%= image_tag("logo.png") %>
  <%= @page_title || "Girls Scouts Troop #" %>
</div>
<!-- END:i18n -->
<div id="columns">
  <div id="side">
    <!-- START:hidden_div -->
    <% if false %>
        <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
            <%= render @cart %>
        <% end %>
    <% end %>
    <!-- END:hidden_div -->

    <ul>
      <li><a href="/"><%= t('.home') %></a></li>
      <li><a href="/events"><%= t('.events') %></a></li>
      <li><a href="/products"><%= t('.products') %></a></li>
      <li><a href="/members"><%= t('.members') %></a></li>
      <li><a href="/signup"><%= t('.signup') %></a></li>
      <li><a href="/links"><%= t('.links') %></a></li>
      <li><a href="/photos"><%= t('.photos') %></a></li>

    </ul>

    <% if session[:user_id] %>
        <ul>
          <li><%= link_to 'Orders',   orders_path   %></li>
          <li><%= link_to 'Products', products_path %></li>
          <li><%= link_to 'Users',    users_path    %></li>
        </ul>
        <%= button_to 'Logout', logout_path, method: :delete   %>
    <% end %>
  </div>
  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>
